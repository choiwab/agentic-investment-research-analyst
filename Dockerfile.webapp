FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create outputs directory
RUN mkdir -p /app/outputs

# Expose ports
EXPOSE 8000 8501

# Create startup script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "Starting FastAPI backend..."\n\
uvicorn backend.app.api_controller:app --host 0.0.0.0 --port 8000 &\n\
FASTAPI_PID=$!\n\
echo "FastAPI started with PID $FASTAPI_PID"\n\
sleep 3\n\
echo "Starting Streamlit frontend..."\n\
streamlit run frontend/equity_research_chatbot.py --server.port 8501 --server.address 0.0.0.0 --server.headless true &\n\
STREAMLIT_PID=$!\n\
echo "Streamlit started with PID $STREAMLIT_PID"\n\
wait $FASTAPI_PID $STREAMLIT_PID\n\
' > /app/start.sh && chmod +x /app/start.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8501 || exit 1

CMD ["/app/start.sh"]
